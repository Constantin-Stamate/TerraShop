﻿@{
    Layout = "~/Views/Shared/_LayoutChangePasswordProfile.cshtml";
    ViewBag.Title = "ChangePasswordProfile";
}

<div class="card profile-card overflow-hidden">
    <div class="row no-gutters">
        <div class="col-md-3">
            <div class="list-group list-group-flush account-settings-links">
                <a class="list-group-item list-group-item-action btn border border-secondary rounded-pill px-3 text-primary"
                   href="@Url.Action("GeneralProfile", "Profile")"
                   style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">General</a>
                <a class="list-group-item list-group-item-action btn border border-secondary rounded-pill px-3 text-primary"
                   href="@Url.Action("ChangePasswordProfile", "Profile")"
                   style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    Change
                    password
                </a>
                <a class="list-group-item list-group-item-action btn border border-secondary rounded-pill px-3 text-primary"
                   href="@Url.Action("SettingsProfile", "Profile")"
                   style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    Profile
                    settings
                </a>
                <a class="list-group-item list-group-item-action btn border border-secondary rounded-pill px-3 text-primary"
                   href="@Url.Action("ArticlesProfile", "Profile")"
                   style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Articles</a>
                <a class="list-group-item list-group-item-action btn border border-secondary rounded-pill px-3 text-primary"
                   href="@Url.Action("SalesProfile", "Profile")"
                   style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Sales</a>
                <a class="list-group-item list-group-item-action btn border border-secondary rounded-pill px-3 text-primary"
                   href="@Url.Action("PurchaseHistoryProfile", "Profile")"
                   style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    Purchase
                    history
                </a>
            </div>
        </div>
        <div class="password-change-container"
             style="margin-left: 160px; background-color: #f9f9f9; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 500px; margin-top: 50px;">
            <h1 style="font-family: 'Arial', sans-serif; font-size: 24px; color: #81c408; text-align: center; margin-bottom: 30px;">
                Change Password
            </h1>
            <form action="#" style="display: flex; flex-direction: column;">
                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="currentPassword" style="font-size: 16px; color: #555;">Current password</label>
                    <input type="password" id="currentPassword" name="currentPassword" class="form-control"
                           style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-top: 2px;" required>
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="newPassword" style="font-size: 16px; color: #555;">New password</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control"
                           style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-top: 2px;" required>
                </div>
                <button type="submit" class="btn-change"
                        style="padding: 10px 20px; background-color: #81c408; color: #fff; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; transition: background-color 0.3s ease;">
                    Save changes
                </button>
            </form>
        </div>
    </div>
</div>