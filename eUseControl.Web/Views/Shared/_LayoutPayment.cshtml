﻿@{
    ViewBag.Title = "_LayoutPayment";
}

@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>TerraShop</title>

    <!-- Favicon Image -->
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Assets/img/favicon.ico")">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    @Styles.Render("~/bundles/main/css")

    <!-- Template Stylesheet -->
    @Styles.Render("~/bundles/style/css")
    @Styles.Render("~/bundles/payment/css")

    <!-- Libraries Stylesheet -->
    @Styles.Render("~/bundles/lightbox/css")
    @Styles.Render("~/bundles/owl/carousel/min/css")

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway|Rock+Salt|Source+Code+Pro:300,400,600" rel="stylesheet">
    <script src="https://unpkg.com/imask"></script>
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
         class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar Start -->
    <div class="container-fluid fixed-top">
        @Html.Partial("_Navbar")
    </div>
    <!-- Navbar End -->

    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        @Html.Partial("_ModalSearch")
    </div>
    <!-- Modal Search End -->

    <!-- Single Page Header Start -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">Payment</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Main")">Home</a></li>
            <li class="breadcrumb-item active text-white">Payment</li>
        </ol>
    </div>
    <!-- Single Page Header End -->

    <!-- Payment Start -->
    <section class="page-wrapper">
       @RenderBody()
    </section>
    <!-- Payment End -->

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        @Html.Partial("_Footer")
    </div>
    <!-- Footer End -->

    <!-- Copyright Start -->
    <div class="container-fluid copyright bg-dark py-4">
        @Html.Partial("_Copyright")
    </div>
    <!-- Copyright End -->

    <!-- Back to Top -->
    <a href="@Url.Action("Payment", "Payment")" class="btn btn-primary border-3 border-primary rounded-circle back-to-top">
        <i class="fa fa-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/easing/min/js")
    @Scripts.Render("~/bundles/waypoints/js")
    @Scripts.Render("~/bundles/lightbox/js")
    @Scripts.Render("~/bundles/owl/carousel/min/js")
    @Scripts.Render("~/bundles/payment/js")

    <!-- Template Javascript -->
    @Scripts.Render("~/bundles/main/js")
</body>

</html>
