@{
    ViewBag.Title = "_LayoutOrderFailure";
}

@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TerraShop</title>

    <!-- Favicon Image -->
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Assets/img/favicon.ico")">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    @Styles.Render("~/bundles/lightbox/css")
    @Styles.Render("~/bundles/owl/carousel/min/css")

    <!-- Customized Bootstrap Stylesheet -->
    @Styles.Render("~/bundles/main/css")

    <!-- Template Stylesheet -->
    @Styles.Render("~/bundles/style/css")

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .confirmation-container {
            background-color: #ffffff;
            max-width: 600px;
            margin: 80px auto;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
            animation: fadeIn 1s ease-in;
        }

        h1 {
            font-size: 29px;
            color: #B22222;
            margin-bottom: 15px;
        }

        .thank-you-msg {
            font-size: 21px;
            color: #444;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
        }

            .thank-you-msg .icon {
                color: #B22222;
                margin-right: 8px;
                font-size: 25px;
            }

        .main-msg {
            font-size: 21px;
            font-weight: bold;
        }

        .sub-msg {
            font-size: 17px;
            color: #777;
            margin-top: 5px;
        }

        .order-details p {
            font-size: 17px;
            color: #333;
            margin: 8px 0;
        }

        .order-details strong {
            color: #000;
        }

        .btn-home {
            display: inline-block;
            margin-top: 30px;
            padding: 12px 24px;
            background-color: #B22222;
            color: white;
            font-weight: bold;
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-home:hover {
                background-color: #B22222;
                color: white;
                transform: scale(1.05);
            }
    </style>
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
         class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar start -->
    <div class="container-fluid fixed-top">
        @Html.Partial("_Navbar")
    </div>
    <!-- Navbar End -->

    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        @Html.Partial("_ModalSearch")
    </div>
    <!-- Modal Search End -->

    <!-- Order Failure Start -->
    <div class="confirmation-container" style="margin-top: 210px;">
        @RenderBody()
    </div>
    <!-- Order Failure Start -->

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/easing/min/js")
    @Scripts.Render("~/bundles/waypoints/js")
    @Scripts.Render("~/bundles/lightbox/js")
    @Scripts.Render("~/bundles/owl/carousel/min/js")

    <!-- Template Javascript -->
    @Scripts.Render("~/bundles/main/js")
</body>

</html>
