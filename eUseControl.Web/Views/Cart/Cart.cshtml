﻿@{
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
    ViewBag.Title = "Cart";
}

<div class="container py-5">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Products</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col">Handle</th>
                    <th scope="col">Purchase</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">
                        <div class="d-flex align-items-center">
                            <img src="@Url.Content("~/Assets/img/volunteer-categories/volunteer-category-3.jpg")" class="img-fluid me-5 rounded-circle"
                                 style="width: 80px; height: 80px;" alt="">
                        </div>
                    </th>
                    <td>
                        <p class="mb-0 mt-4">Big Banana</p>
                    </td>
                    <td>
                        <p class="mb-0 mt-4">2.99 $</p>
                    </td>
                    <td>
                        <div class="input-group quantity mt-4" style="width: 100px;">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control form-control-sm text-center border-0" value="1">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="mb-0 mt-4">2.99 $</p>
                    </td>
                    <td>
                        <button class="btn btn-md rounded-circle bg-light border mt-4">
                            <i class="fa fa-times text-danger"></i>
                        </button>
                    </td>
                    <td>
                        <form action="#" method="get" style="display: inline;">
                            <button type="submit" class="btn btn-success mt-4 btn-animated"
                                    style="background-color: #FFB524; border-color: #FFB524;">
                                Purchase
                            </button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
