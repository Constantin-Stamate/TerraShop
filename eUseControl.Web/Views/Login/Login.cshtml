@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}

@model eUseControl.Web.Models.UserLogin

<div class="center">
    <div class="container" style="margin-top: 35px;">
        <div class="text">
            Login
        </div>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @id = "LoginForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="data">
                @Html.LabelFor(m => m.Username, new { style = "margin-left: 2px;" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })
            </div>
            <div class="data">
                @Html.LabelFor(m => m.Password, new { style = "margin-left: 2px;" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            </div>

            <div style="margin-top: 10px;">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="text-danger no-bullets" style="text-align: center;">
                        <ul>
                            <li>@TempData["ErrorMessage"]</li>
                        </ul>
                    </div>
                }
            </div>
            <div class="btn">
                <div class="inner"></div>
                <button type="submit" style="padding-top: 6px;">Login</button>
            </div>
            <div class="signup-link">
                Not a member? <a href="@Url.Action("Register", "Register")">Signup now</a>
            </div>
        }
    </div>
</div>

<style>
    .no-bullets ul {
        list-style: none;
        padding-left: 0;
        margin: 0;
    }
</style>